<resources>
    <!-- Base application theme. -->
    <style name="Theme.IconEditor" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Widget.Material3.ActionBar.Solid</item>
        <item name="actionModeCloseButtonStyle">
            @style/Widget_IconEditor_ActionMode_CloseButton
        </item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionModeStyle">@style/Widget.IconEditor.ActionMode</item>
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.IconEditor.MaterialAlertDialog.NoInset
        </item>
        <item name="preferenceTheme">@style/Theme_IconEditor_Preference</item>
        <item name="tabStyle">@style/Widget.IconEditor.TabLayout</item>
        <item name="tabSecondaryStyle">@style/Widget.IconEditor.TabLayout.Secondary</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Surface</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.IconEditor.NoActionBar" parent="Theme.IconEditor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IconEditor.SquareCorner" parent="Theme.IconEditor">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.IconEditor.BottomSheetDialog</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.IconEditor.SquareCorner</item>
    </style>

    <style name="Theme.IconEditor.SquareCorner.NoActionBar" parent="Theme.IconEditor.SquareCorner">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.IconEditor.BottomSheetDialog</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.IconEditor.SquareCorner</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_IconEditor_Preference" parent="PreferenceThemeOverlay">
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ThemeOverlay.IconEditor.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.IconEditor.BottomSheet.Modal</item>
    </style>

    <style name="ThemeOverlay.IconEditor.MaterialAlertDialog.NoInset" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.IconEditor.NoInset</item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/MaterialAlertDialog.IconEditor.Title.Icon
        </item>
    </style>

    <style name="ThemeOverlay.IconEditor.TabLayout" parent="">
        <item name="colorSurface">@android:color/transparent</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Dense" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dense" parent="Widget.Material3.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget_App_ButtonToggleGroup_ToolOptions" parent="Widget_App_LinearLayout_ToolOptions">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">2dp</item>
    </style>

    <style name="Widget_App_LinearLayout_ToolOptions">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/item_checked</item>
    </style>

    <style name="Widget_App_ScrollView_ToolOptions">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fadingEdgeLength">16dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:scrollbars">none</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Widget.App.TextInputLayout.Dense" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_marginHorizontal">2dp</item>
    </style>

    <style name="Widget_App_View">
        <item name="android:layout_marginHorizontal">2dp</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialAlertDialog.IconEditor.NoInset" parent="MaterialAlertDialog.Material3">
        <item name="backgroundInsetTop">16dp</item>
        <item name="backgroundInsetBottom">16dp</item>
    </style>

    <style name="MaterialAlertDialog.IconEditor.Title.Icon" parent="MaterialAlertDialog.Material3.Title.Icon">
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ShapeAppearance.IconEditor.SquareCorner" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Widget.IconEditor.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="Widget_IconEditor_ActionMode_CloseButton" parent="">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.IconEditor.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.IconEditor.SquareCorner</item>
    </style>

    <style name="Widget.IconEditor.Button.OutlinedButton.Dense" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.IconEditor.Button.OutlinedButton.Dense.Icon" parent="Widget.IconEditor.Button.OutlinedButton.Dense">
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="Widget.IconEditor.Button.TextButton.Dense" parent="Widget.Material3.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget_IconEditor_ButtonToggleGroup_ToolOptions" parent="Widget_IconEditor_LinearLayout_ToolOptions">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget_IconEditor_LinearLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget_IconEditor_LinearLayout_ToolOptions">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.IconEditor.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/item_checked</item>
    </style>

    <style name="Widget_IconEditor_ScrollView_ToolOptions">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fadingEdgeLength">16dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:scrollbars">none</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Widget.IconEditor.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IconEditor.TabLayout</item>
    </style>

    <style name="Widget.IconEditor.TabLayout.Secondary" parent="Widget.Material3.TabLayout.Secondary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IconEditor.TabLayout</item>
    </style>

    <style name="Widget.IconEditor.TextInputLayout.Dense" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_marginHorizontal">2dp</item>
    </style>

    <style name="Widget_IconEditor_View">
        <item name="android:layout_marginHorizontal">2dp</item>
    </style>
</resources>
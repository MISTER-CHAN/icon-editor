<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ToolOptionsLL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/btg_eyedropper_src"
        style="@style/ToolOptionsBTG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedButton="@id/b_eyedropper_current_layer"
        app:selectionRequired="true"
        app:singleSelection="true">

        <Button
            android:id="@+id/b_eyedropper_current_layer"
            style="@style/Widget_Button_OutlinedButton_Dense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_layer" />

        <Button
            android:id="@+id/b_eyedropper_all_layers"
            style="@style/Widget_Button_OutlinedButton_Dense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_layers" />
    </com.google.android.material.button.MaterialButtonToggleGroup>
</LinearLayout>
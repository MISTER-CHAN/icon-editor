<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget_IconEditor_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <include
        style="@style/Widget_IconEditor_Inclusion_ItemColor"
        layout="@layout/item_color"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="24dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_color_pickers"
        style="?attr/tabSecondaryStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabContentStart="24dp"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rgb" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hsv" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cmyk" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yuv" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cie_l_a_b_" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cie_xyz" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cie_xyy" />
    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        style="@style/Widget_IconEditor_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1">

            <include layout="@layout/color_components" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_extra_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>
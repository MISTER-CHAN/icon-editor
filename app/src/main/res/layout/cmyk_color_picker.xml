<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:id="@+id/v_color_preview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/black" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:rowCount="4">

        <com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cyan"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="@string/c"
                android:inputType="text"
                android:textAlignment="textEnd" />
        </com.google.android.material.textfield.TextInputLayout>

        <SeekBar
            android:id="@+id/sb_cyan"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:max="255"
            android:progress="255" />

        <com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_magenta"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="@string/m"
                android:inputType="text"
                android:textAlignment="textEnd" />
        </com.google.android.material.textfield.TextInputLayout>

        <SeekBar
            android:id="@+id/sb_magenta"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:max="255" />

        <com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_yellow"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="@string/y"
                android:inputType="text"
                android:textAlignment="textEnd" />
        </com.google.android.material.textfield.TextInputLayout>

        <SeekBar
            android:id="@+id/sb_yellow"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:max="255" />

        <com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_key"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="@string/k"
                android:inputType="text"
                android:textAlignment="textEnd" />
        </com.google.android.material.textfield.TextInputLayout>

        <SeekBar
            android:id="@+id/sb_key"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:max="255" />
    </GridLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="3">

        <TextView
            android:layout_gravity="fill_vertical|start"
            android:layout_margin="8dp"
            android:gravity="center_vertical|start"
            android:text="@string/h" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs_hue"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:stepSize="1"
            android:valueFrom="0"
            android:valueTo="360"
            app:tickVisible="false"
            app:values="@array/range_0_360_values" />

        <TextView
            android:layout_gravity="center_vertical|start"
            android:layout_margin="8dp"
            android:text="@string/s" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs_saturation"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:stepSize="0.01"
            android:valueFrom="0"
            android:valueTo="1"
            app:tickVisible="false"
            app:values="@array/range_0_1_values" />

        <TextView
            android:layout_gravity="center_vertical|start"
            android:layout_margin="8dp"
            android:text="@string/v" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs_value"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:stepSize="0.01"
            android:valueFrom="0"
            android:valueTo="1"
            app:tickVisible="false"
            app:values="@array/range_0_1_values" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="8dp"
            android:text="@string/transition" />

        <com.google.android.material.slider.Slider
            android:id="@+id/s_transition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="1"
            app:labelBehavior="gone"
            app:tickVisible="false" />
    </LinearLayout>
</LinearLayout>
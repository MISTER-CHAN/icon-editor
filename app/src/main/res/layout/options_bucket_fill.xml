<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget_App_LinearLayout_ToolOptions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_contiguous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contiguous" />

    <CheckBox
        android:id="@+id/cb_ignore_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ignore_alpha" />

    <Button
        android:id="@+id/b_tolerance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/tolerance" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:columnCount="2"
    android:gravity="center"
    android:orientation="horizontal"
    android:rowCount="5">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginVertical="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_alpha"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:hint="@string/a"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAlignment="textEnd" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/s_alpha"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:valueTo="255"
        app:labelBehavior="gone"
        app:tickVisible="false" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_comp_0"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginVertical="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_comp_0"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:hint="@string/r"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAlignment="textEnd" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/s_comp_0"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:valueTo="255"
        app:labelBehavior="gone"
        app:tickVisible="false" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_comp_1"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginVertical="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_comp_1"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:hint="@string/g"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAlignment="textEnd" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/s_comp_1"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:valueTo="255"
        app:labelBehavior="gone"
        app:tickVisible="false" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_comp_2"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginVertical="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_comp_2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:hint="@string/b"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAlignment="textEnd" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/s_comp_2"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:valueTo="255"
        app:labelBehavior="gone"
        app:tickVisible="false" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_comp_3"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginVertical="2dp"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_comp_3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:hint="@string/k"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAlignment="textEnd" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/s_comp_3"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:valueTo="255"
        android:visibility="gone"
        app:labelBehavior="gone"
        app:tickVisible="false" />
</GridLayout>
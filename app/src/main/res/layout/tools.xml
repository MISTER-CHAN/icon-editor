<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButtonToggleGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btg_tools"
    style="@style/Widget_IconEditor_ButtonToggleGroup_ToolOptions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:selectionRequired="true"
    app:singleSelection="true">

    <Button
        android:id="@+id/b_selector"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select" />

    <Button
        android:id="@+id/b_transformer"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transform" />

    <Button
        android:id="@+id/b_eyedropper"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eyedropper"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_ruler"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ruler"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_pencil"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pencil"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_brush"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brush"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_magic_paint"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/magic_paint"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_eraser"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eraser"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_magic_eraser"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/magic_eraser"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_line"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_rect"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rectangle"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_oval"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oval"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_circle"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/circle"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_gradient_line"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gradient_line"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_bucket_fill"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bucket_fill" />

    <Button
        android:id="@+id/b_gradient"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gradient_line"
        android:visibility="gone"
        app:icon="@drawable/ic_expand_more"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <Button
        android:id="@+id/b_text"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text" />

    <Button
        android:id="@+id/b_path"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/path" />

    <Button
        android:id="@+id/b_clone_stamp"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stamp" />

    <Button
        android:id="@+id/b_patcher"
        style="@style/Widget.IconEditor.Button.OutlinedButton.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patch" />
</com.google.android.material.button.MaterialButtonToggleGroup>
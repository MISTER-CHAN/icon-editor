<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="its"
            app:singleLineTitle="false"
            app:title="@string/independent_transl_and_scale" />

        <ListPreference
            app:defaultValue="hex"
            app:entries="@array/radix_entries"
            app:entryValues="@array/radix_values"
            app:key="acr"
            app:title="@string/argb_channels_radix"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="def"
            app:entries="@array/locales_entries"
            app:entryValues="@array/locales_values"
            app:key="loc"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">

        <Preference
            app:summary="@string/mister_chan"
            app:title="@string/author" />

        <Preference
            app:summary="@string/homepage_address"
            app:title="@string/check_for_updates" />

    </PreferenceCategory>

</PreferenceScreen>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="its"
            app:singleLineTitle="false"
            app:summaryOff="@string/unified_transl_and_scale"
            app:summaryOn="@string/independent_transl_and_scale"
            app:title="@string/independent_layer" />

        <ListPreference
            app:defaultValue="false"
            app:entries="@array/nll_entries"
            app:entryValues="@array/bool_values"
            app:key="nll"
            app:singleLineTitle="false"
            app:title="@string/level_of_new_layer"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="def"
            app:entries="@array/locales_entries"
            app:entryValues="@array/locales_values"
            app:key="loc"
            app:singleLineTitle="false"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/argb_color_picker">

        <ListPreference
            app:defaultValue="false"
            app:entries="@array/type_entries"
            app:entryValues="@array/bool_values"
            app:key="act"
            app:singleLineTitle="false"
            app:title="@string/color_type"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="16"
            app:entries="@array/radix_entries"
            app:entryValues="@array/radix_values"
            app:key="acr"
            app:singleLineTitle="false"
            app:title="@string/color_int_component_radix"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/performance">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="fb"
            app:singleLineTitle="false"
            app:summary="@string/filter_displayed_image_after_zooming_out"
            app:title="@string/filter_image" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="mt"
            app:singleLineTitle="false"
            app:summaryOff="@string/synchronously_draw_image_and_ui"
            app:summaryOn="@string/asynchronously_draw_image_and_ui"
            app:title="@string/draw_on_not_ui_thread" />

        <EditTextPreference
            app:defaultValue="50"
            app:key="hms"
            app:singleLineTitle="false"
            app:summary="@string/this_would_affect_size_of_memory_used"
            app:title="@string/history_max_size" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">

        <Preference
            app:singleLineTitle="false"
            app:summary="@string/mister_chan"
            app:title="@string/author" />

        <Preference
            app:key="cfu"
            app:singleLineTitle="false"
            app:title="@string/version" />

    </PreferenceCategory>

</PreferenceScreen>
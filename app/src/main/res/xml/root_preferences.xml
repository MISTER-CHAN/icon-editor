<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="fl"
            app:singleLineTitle="false"
            app:title="@string/show_timeline" />

        <ListPreference
            app:defaultValue="top"
            app:entries="@array/nll_entries"
            app:entryValues="@array/nll_values"
            app:key="nll"
            app:singleLineTitle="false"
            app:title="@string/level_of_new_layer"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="def"
            app:entries="@array/locales_entries"
            app:entryValues="@array/locale_values"
            app:icon="@drawable/ic_language"
            app:key="loc"
            app:singleLineTitle="false"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/argb_color_picker">

        <ListPreference
            app:defaultValue="i"
            app:entries="@array/color_rep_entries"
            app:entryValues="@array/color_rep_values"
            app:key="cr"
            app:singleLineTitle="false"
            app:title="@string/color_representation"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="16"
            app:entries="@array/radix_entries"
            app:entryValues="@array/radix_values"
            app:key="cir"
            app:singleLineTitle="false"
            app:title="@string/component_numeral_system"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="pih"
            app:singleLineTitle="false"
            app:summary="@string/pick_rgb_colors_in_hsv"
            app:title="@string/pick_in_hsv" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/performance">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="fb"
            app:singleLineTitle="false"
            app:summary="@string/filter_displayed_image_after_zooming_out"
            app:title="@string/filter_image" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="asha"
            app:singleLineTitle="false"
            app:summaryOff="@string/bitmap_opaque_can_take_faster_drawing_case"
            app:summaryOn="@string/automatically_tell_bitmap_pixels_contain_alpha_values"
            app:title="@string/automatically_tell_has_alpha" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="mt"
            app:singleLineTitle="false"
            app:summaryOff="@string/synchronously_draw_image_and_ui"
            app:summaryOn="@string/asynchronously_draw_image_and_ui"
            app:title="@string/draw_on_not_ui_thread" />

        <EditTextPreference
            app:defaultValue="50"
            app:icon="@drawable/ic_history"
            app:key="hms"
            app:singleLineTitle="false"
            app:summary="@string/this_would_affect_size_of_memory_used"
            app:title="@string/history_max_size" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">

        <Preference
            app:singleLineTitle="false"
            app:summary="@string/mister_chan"
            app:title="@string/author" />

        <Preference
            app:key="cfu"
            app:singleLineTitle="false"
            app:title="@string/version" />

    </PreferenceCategory>

</PreferenceScreen>